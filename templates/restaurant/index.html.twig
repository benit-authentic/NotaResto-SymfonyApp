{% extends 'base.html.twig' %}

{% block title %}Liste des restaurants{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-5 fw-bold text-center">Liste des restaurants</h1>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col" style="font-size: 1.4em;">#</th>
                        <th scope="col" style="font-size: 1.4em;">Restaurants</th>
                        <th scope="col" style="font-size: 1.4em;">LocalitÃ©</th>
                        <th scope="col" style="font-size: 1.4em;">Note</th>
                        <th scope="col" style="font-size: 1.4em;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for restaurant in restaurants %}
                        <tr>
                            <th scope="row">{{ restaurant.id }}</th>
                            <td>
                                <strong>{{ restaurant.name }}</strong><br>
                                <small class="text-muted">
                                    {{ restaurant.description|length > 100 ? restaurant.description|slice(0, 100) ~ '...' : restaurant.description }}
                                </small>
                            </td>
                            <td>{{ restaurant.zipcode }} {{ restaurant.address }}</td>
                            <td>{{ restaurant.averageRating | stars }}</td>
                            <td class="text-center">
                                <a href="{{ path('restaurant_show', {restaurant: restaurant.id}) }}" class="btn btn-dark btn-sm">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">Aucun restaurant trouvÃ©</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(restaurants, '_pagination/pagination_bootstrap_v5.html.twig') }}
        </div>
    </div>
{% endblock %}
