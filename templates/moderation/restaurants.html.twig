{% extends 'base.html.twig' %}

{% block title %}Modération des restaurants{% endblock %}

{% block body %}
    <div class="container mt-3">
        <h1>Modération des restaurants</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Propriétaire</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for restaurant in restaurants %}
                    <tr>
                        <td>{{ restaurant.id }}</td>
                        <td>{{ restaurant.name }}</td>
                        <td>{{ restaurant.user.email }}</td>
                        <td>
                            <!-- Ajouter les actions de modération ici -->
                            <a href="{{ path('restaurant_delete', {'restaurant': restaurant.id}) }}" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
