{% extends 'base.html.twig' %}

{% block title %}Modération des utilisateurs{% endblock %}

{% block body %}
    <div class="container mt-3">
        <h1 class="mb-5 fw-bold text-center">Modération des utilisateurs</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Email</th>
                    <th>Rôle</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles | join(', ') }}</td>
                        <td>
                            <!-- Ajouter les actions de modération ici -->
                            <a href="" class="btn btn-warning">Suspendre</a>
                            <a href="" class="btn btn-danger">Bannir</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
